<div class="offset-md-3 col-md-6">
@{
  Layout = "_Layout";
}

@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <p>Welcome @User.Identity.Name!</p>

    <p>@Html.ActionLink("Add Flavor", "Create", "Treats")</p>
    <p>@Html.ActionLink("Add Treat", "Create", "Flavors")</p>

    <hr>

    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-primary btn-block" value="Log out" />
    }
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
}
<p>@Html.ActionLink("Home", "Index", "Home")</p>
