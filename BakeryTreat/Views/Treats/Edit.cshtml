<div class="offset-md-3 col-md-6">
@{
  Layout = "_Layout";
}

@model BakeryTreat.Models.Treat

<h4>Edit this treat: @Html.DisplayFor(m => m.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(m => m.TreatId)

  @Html.TextBoxFor(m => m.TreatName, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m=>m.TreatName), required="required"})
  <input type="submit" value="Save" class="btn btn-primary"/>
}

<p>@Html.ActionLink("Back to list", "Index")</p>