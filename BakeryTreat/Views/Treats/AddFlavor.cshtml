@{
  Layout = "_Layout";
}

@model BakeryTreat.Models.Treat

<h2>Add Flavor</h2>

<h4>Add flavor to this treat: @Html.DisplayFor(m => m.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(m => m.TreatId)

  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>