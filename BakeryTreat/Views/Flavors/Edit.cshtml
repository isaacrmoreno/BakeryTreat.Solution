<div class="offset-md-3 col-md-6">
@{
  Layout = "_Layout";
}

@model BakeryTreat.Models.Flavor

<h4>Edit this flavor: @Html.DisplayFor(m => m.FlavorName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(m => m.FlavorId)

  @Html.TextBoxFor(m => m.FlavorName, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m=>m.FlavorName), required="required"})
  <input type="submit" value="Save" class="btn btn-primary btn-block" />
}
<p>@Html.ActionLink("Back to list", "Index")</p